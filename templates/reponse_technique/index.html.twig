{% extends 'base.html.twig' %}

{% block title %}الردود الفنية{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">الردود الفنية</h3>
            <div>
                <a class="btn btn-light" href="{{ path('app_reponse_technique_new') }}">إضافة رد جديد</a>
                <a href="{{ path('app_demande_maintenance_index') }}" class="btn btn-outline-light ms-2">رجوع إلى طلبات الصيانة</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="reponseTable" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>مُعرف</th>
                            <th>الطلب</th>
                            <th>الفني</th>
                            <th>المحتوى</th>
                            <th>التاريخ</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reponse in reponse_techniques %}
                        <tr>
                            <td>{{ reponse.id }}</td>
                            <td>{{ reponse.getdemande.description }}</td>
                            <td>{{ reponse.technicien.nomp }}</td>
                            <td>{{ reponse.contenu|u.truncate(50) }}</td>
                            <td>{{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                <a href="{{ path('app_reponse_technique_show', {'id': reponse.id}) }}" class="btn btn-sm btn-info">عرض</a>
                                <a href="{{ path('app_reponse_technique_edit', {'id': reponse.id}) }}" class="btn btn-sm btn-warning">تعديل</a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="6" class="text-center">لا توجد ردود.</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#reponseTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/ar.json"
                },
                "pageLength": 10,
                "responsive": true
            });
        });
    </script>
{% endblock %}