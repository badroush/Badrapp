{% extends 'base.html.twig' %}

{% block title %}ردود الطلب #{{ demande.id }}{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="card shadow-lg border-0">
       <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">ردود الطلب #{{ demande.id }}</h3>
            <p class="mb-0">الوصف: {{ demande.description }}</p>
        </div>
        <div class="card-body">
            {% if reponses|length > 0 %}
                {% for reponse in reponses %}
                    <div class="card mb-2">
                        <div class="card-body">
                            <p class="card-text">{{ reponse.contenu }}</p>
                            <small class="text-muted">
                                بواسطة: {{ reponse.technicien.nomp }}<br>
                                بتاريخ: {{ reponse.dateReponse ? reponse.dateReponse|date('Y-m-d H:i') }}
                            </small>
                            
                            {% if app.user and ('ROLE_ADMIN' in app.user.roles or 'ROLE_SUPER_ADMIN' in app.user.roles or 'ROLE_TECH' in app.user.roles) %}
                                <div class="mt-2">
                                    <a href="{{ path('app_reponse_technique_edit', {'id': reponse.id}) }}" class="btn btn-sm btn-warning">تعديل</a>
                                   <form method="post" action="{{ path('app_reponse_technique_delete', {'id': reponse.id}) }}" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('هل أنت متأكد؟')">حذف</button>
                                </form>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>لا توجد ردود لهذا الطلب.</p>
            {% endif %}

            <div class="mt-3">
                <a class="btn btn-secondary" href="{{ path('app_demande_maintenance_index') }}">عودة إلى القائمة</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}