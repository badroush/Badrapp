{% extends 'base.html.twig' %}

{% block title %}تحديث الفصل{% endblock %}

{% block body %}
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-lg border-0">
                   <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">✏️ تحديث مبلغ الفصل</h2>
                    </div>
                    <div class="card-body p-5">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.idChapitre) }}
                                        {{ form_widget(form.idChapitre, {'attr': {'class': 'form-select'}}) }}
                                        {{ form_errors(form.idChapitre) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.idEtablissement) }}
                                        {{ form_widget(form.idEtablissement, {'attr': {'class': 'form-select'}}) }}
                                        {{ form_errors(form.idEtablissement) }}
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.montant) }}
                                        {{ form_widget(form.montant, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.montant) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.annee) }}
                                        {{ form_widget(form.annee, {'attr': {'class': 'form-control'}}) }}
                                        {{ form_errors(form.annee) }}
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>
                                    تحديث
                                </button>
                                
                                <a href="{{ path('app_budget_index') }}" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>
                                    رجوع الى قائمة الميزانية
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            border-radius: 12px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin: 0;
            border: none;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
        .btn {
            border-radius: 8px;
            font-weight: 500;
        }
    </style>
{% endblock %}