{% extends 'base.html.twig' %}

{% block title %}طلبات الصيانة{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
{% endblock %}

{% block body %}
<div class="container-fluid mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-left">
            <h3 class="mb-0">طلبات الصيانة</h3>
            <a class="btn btn-light" href="{{ path('app_demande_maintenance_new') }}">إنشاء طلب جديد</a>
            {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_reponse_technique_index') }}" class="btn btn-info">إدارة جميع الردود</a>
                    {% endif %}
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="demandeTable" class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>مُعرف</th>
                            <th>المؤسسة</th>
                            <th>المسؤول</th>
                            <th>الوصف</th>
                            <th>النوع</th>
                            <th>الأولوية</th>
                            <th>الحالة</th>
                            <th>التاريخ</th>
                            <th>الإجراءات</th>
                            <th>الردود</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for demande in demande_maintenances %}
                        <tr>
                            <td>{{ demande.id }}</td>
                            <td>{{ demande.etablissement.nom }}</td>
                            <td>{{ demande.responsableDemande.nomp }}</td>
                            <td>{{ (demande.description|length > 50 ? demande.description|slice(0, 50) ~ '...' : demande.description) }}</td>
                            <td>{{ demande.type }}</td>
                            <td>
                                <span class="badge 
                                    {% if demande.priorite == 'faible' %}bg-secondary
                                    {% elseif demande.priorite == 'moyenne' %}bg-info
                                    {% elseif demande.priorite == 'haute' %}bg-warning
                                    {% elseif demande.priorite == 'critique' %}bg-danger
                                    {% endif %}">
                                    {% if demande.priorite == 'faible' %}
                                        منخفضة
                                    {% elseif demande.priorite == 'moyenne' %}
                                        متوسطة
                                    {% elseif demande.priorite == 'haute' %}
                                        مرتفعة
                                    {% elseif demande.priorite == 'critique' %}
                                        حرجة
                                    {% endif %}
                                </span>
                            </td>
                            <td>
                                <span class="badge 
                                    {% if demande.statut == 'envoyee' %}bg-secondary
                                    {% elseif demande.statut == 'en_cours' %}bg-warning
                                    {% elseif demande.statut == 'resolue' %}bg-success
                                    {% elseif demande.statut == 'reportee' %}bg-info
                                    {% elseif demande.statut == 'rejetee' %}bg-danger
                                    {% endif %}">
                                    {% if demande.statut == 'envoyee' %}
                                        مرسلة
                                    {% elseif demande.statut == 'en_cours' %}
                                        قيد المعالجة
                                    {% elseif demande.statut == 'resolue' %}
                                        محلولة
                                    {% elseif demande.statut == 'reportee' %}
                                        مؤجلة
                                    {% elseif demande.statut == 'rejetee' %}
                                        مرفوضة
                                    {% endif %}
                                </span>
                            </td>
                            <td>{{ demande.dateCreation ? demande.dateCreation|date('Y-m-d H:i') : '' }}</td>
                            <td>
                                {% if is_granted('ROLE_TECH') %}
                                    <a href="{{ path('app_demande_maintenance_show', {'id': demande.id}) }}" class="btn btn-sm btn-info">عرض</a>
                                    <a href="{{ path('app_demande_maintenance_edit', {'id': demande.id}) }}" class="btn btn-sm btn-warning">تعديل</a>
                                    
                                    {% if app.user and ('ROLE_TECH' in app.user.roles) and demande.statut != 'resolue' %}
                                        <a href="{{ path('app_reponse_technique_new_for_demande', {'id': demande.id}) }}" class="btn btn-sm btn-success">كتابة رد</a>
                                    {% endif %}

                                    {# Bouton de suppression inline #}
                                    <form method="post" action="{{ path('app_demande_maintenance_delete', {'id': demande.id}) }}" 
                                        style="display:inline-block" 
                                        onsubmit="return confirm('هل أنت متأكد من الحذف؟');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
                                        <button class="btn btn-sm btn-danger">حذف</button>
                                    </form>
                                {% else %}
                                    <a href="{{ path('app_demande_maintenance_show', {'id': demande.id}) }}" class="btn btn-sm btn-info">عرض</a>
                                {% endif %}
                            </td>

                            <td>
                                {% if demande.reponsesTechniques|length > 0 %}
                                    <a href="{{ path('app_reponse_technique_list_by_demande', {'id': demande.id}) }}" class="btn btn-sm btn-info">
                                        عرض ({{ demande.reponsesTechniques|length }})
                                    </a>
                                {% else %}
                                    <span class="text-muted">لا توجد ردود</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% else %}
                            <p class="text-center">لا توجد طلبات.</p>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script>
	document.addEventListener("DOMContentLoaded", function() {
	    // Initialiser DataTables
	    new DataTable('#demandeTable', {
	        language: { url: 'https://cdn.datatables.net/plug-ins/2.0.8/i18n/ar.json    ' },
	        paging: true,
	        pageLength: 10,
	        searching: true,
	        info: true,
	        order: [[0, 'asc']]
	    });
	});
	</script>
{% endblock %}