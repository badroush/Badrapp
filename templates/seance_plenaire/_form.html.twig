{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
    <div class="col-md-6">
        {{ form_row(form.association, {'label': 'الجمعية'}) }}
        {{ form_row(form.date, {'label': 'تاريخ الجلسة'}) }}
        {{ form_row(form.type, {'label': 'نوع الجلسة'}) }}
    </div>
    <div class="col-md-6">
        <div class="mb-3">
            {{ form_label(form.documents, 'الوثائق') }}
            {{ form_widget(form.documents, {'attr': {'class': 'checkbox-group'}}) }}
        </div>
    </div>
    <div class="col-12">
        <button class="btn btn-success">
            <i class="bi bi-save"></i> {{ button_label|default('حفظ') }}
        </button>
        <a href="{{ path('app_seance_plenaire_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-return-left"></i> عودة إلى القائمة
        </a>
    </div>
